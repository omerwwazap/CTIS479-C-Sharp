@model ListViewModel
@{
    ViewData["Title"] = "Helicopter Home Page";
}
<div class="text-center">
    <h1 class="display-4">Welcome to Our Helicopter Database</h1>
</div>

<td><a id="createbtn" class="btn-primary btn" asp-controller="Helicopter" asp-action="Create">Create</a></td>

<table class="table table-striped table-hover">
    <tr>
        <td><strong>Name</strong></td>
        <td><strong>Description</strong></td>
        <td><strong>Category</strong></td>
        <td><strong>Price</strong></td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
    @foreach (Helicopter p in Model.Helicopters)
    {
        <tr>
            <td>@p.Name</td>
            <td>@p.Description</td>
            <td>@p.Category</td>
            <td>@p.Price</td>
            <td><a asp-controller="Helicopter" asp-action="Detail" asp-route-id="@p.HelicopterId">Detail</a></td>
            <td><a asp-controller="Helicopter" asp-action="Edit" asp-route-id="@p.HelicopterId">Edit</a></td>
            <td><a asp-controller="Helicopter" asp-action="Delete" asp-route-id="@p.HelicopterId">Delete</a></td>
        </tr>
    }
</table>
<div class="text-center">
    <div page-model="@Model.PagingInfo"
         page-action="Index"
         page-classes-enabled="true"
         page-class-normal="btn btn-outline-dark"
         page-class-selected="btn btn-primary"
         class="btn-group m-1">
    </div>
</div>
<br>
<div class="text-center">
    <img class="img-thumbnail" src="~/images/heli.png" />
</div>
