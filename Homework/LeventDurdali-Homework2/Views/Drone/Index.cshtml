@model IEnumerable<Drone>
@{
    ViewData["Title"] = "Index";
}

<td><a calss="btn-primary" asp-controller="Product" asp-action="Create">Create</a></td>

<table class="table table-striped table-hover">
    @foreach (Drone p in Model)
    {
        <tr>
            <td>@p.Price</td>
            <td>@p.Name</td>
            <td><a calss="btn-primary" asp-controller="Drone" asp-action="Detail" asp-route-id="@p.ProductId">Detail</a></td>
            <td><a calss="btn-primary" asp-controller="Drone" asp-action="Edit" asp-route-id="@p.ProductId">Edit</a></td>
            <td><a calss="btn-primary" asp-controller="Drone" asp-action="Delete" asp-route-id="@p.ProductId">Delete</a></td>
        </tr>
    }
</table>
